<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <%= render 'layouts/user_info', user: @user %>
      <%= render 'books/new',book: @book %>
    </div>
    <div class="col-lg-8">

<strong>本のジャンル</strong><br>
<%= f.hidden_field :category %>

<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<%= render 'layouts/user_info', user: @user %>
            <%= render 'books/new',book: @book %>
        </div>
		<div class="col-lg-8">
			<%= render 'layouts/error_messages', er:@user %>
            <h1>Books</h1>
                <% @books.each do |book|%>
                    <table class="table">
  	                    <tr>
  		                    <th style="width:150px;">&nbsp;</th>
  		                    <th style="width:150px;">title</th>
  		                    <th style="width:200px;">opinion</th>
  		                    <th style="width:100px;">category</th>
  	                    </tr>
  	                    <tr>
  		                    <td><%= attachment_image_tag @user,:image, fallback: "no_img.jpg", size: '100x100' %></td>
  		                    <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
  		                    <td><%= book.body %></td>
  		                    <td><%= book.category %></td>
  	                    </tr>
                    </table>
                <% end %>
        </div>
    </div>
</div>
<div class ="container">

<h1>User info</h1>

<%= form_for(@user)do |f| %>
   <label>Name</label>
   <%= f.text_field :name ,autofocus:true, placeholder:"name 2〜20文字"%>
   <div><label>Image</label></div>
   <%= f.attachment_field :image, placeholder:"profile_image"%>
   <div><label>introduction</label>
      <%= f.text_area :body, placeholder:"introduction 〜50文字"%>
   </div>
   <div>
      <%= f.submit "Update User"%>
   </div>
<% end %>
</div>